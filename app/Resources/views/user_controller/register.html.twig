{% extends 'base.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-xs-12 col-sm-6">
            <h1>Inscription</h1>
            {{ form_start(form) }}
            {{ form_row(form.nom) }}
            {{ form_row(form.prenom) }}
            {{ form_row(form.email) }}
            {{ form_row(form.plainPassword.first, {
                'label' : 'Mot de passe'
            }) }}
            {{ form_row(form.plainPassword.second, {
                'label' : 'Retapez votre mot de passe'
            }) }}
            <button type="submit" class="btn btn-warning" formnovalidate><i class="fa fa-check" aria-hidden="true"></i> S'inscrire</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}