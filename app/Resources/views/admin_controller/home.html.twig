{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/admin.css') }}" rel="stylesheet">
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-xs-12 col-sm-10 col-md-8">
            <h1>Administration</h1>
                <div class="admin-options">
                    <h2>Gestion des commentaires</h2>
                    {% if flaggedComments != 0 %}
                        <div class="alert alert-danger margin-top">
                            <a href="{{ path('admin_show_flagged_comments') }}" class="admin-options__comments">{{ (flaggedComments > 1) ? flaggedComments ~ ' commentaires signalés' : flaggedComments ~ ' commentaire signalé'}}</a>
                        </div>
                    {% endif %}
                    {% if newComments != 0 %}
                        <div class="alert alert-success margin-top">
                            <a href="{{ path('admin_show_comments') }}" class="admin-options__comments">{{ (newComments > 1) ? newComments ~ ' nouveaux commentaires' : newComments ~ ' nouveau commentaire'}}</a>
                        </div>
                    {% else %}
                        <div class="alert alert-success margin-top">
                            <a href="{{ path('admin_show_comments') }}" class="admin-options__comments">Voir tous les commentaires</a>
                        </div>
                    {% endif %}
                </div>
            <div class="admin-options">
                <h2>Gestion des articles</h2>
                <p class="admin-options__option"><span class="admin-options__arrow">&rarr;</span><a href="{{ path('admin_create_article') }}"> Créer un article</a></p>
                <p class="admin-options__option"><span class="admin-options__arrow" >&rarr;</span><a href="{{ path('admin_show_articles') }}"> Modifier les articles</a></p>
            </div>
        </div>
    </div>
{% endblock %}
